        status_command i3blocks
	position top
	colors {
		background $bg-color
		separator #757575
		#			border			background		text
		focused_workspace	$bg-color		#FFDAB9 		#303030
		inactive_workspace	$inactive-bg-color	$inactive-bg-color	#303030
		urgent_workspace	$urgent-bg-color	$urgent-bg-color	$text-color
	}
}

